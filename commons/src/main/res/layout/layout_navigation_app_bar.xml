<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_64dp"
    android:background="@color/base_white">

    <TextView
        android:id="@+id/textViewTitle"
        style="@style/Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/buttonEnd"
        android:paddingBottom="@dimen/dimens_4dp"
        android:layout_toEndOf="@id/imageButtonBack"
        android:ellipsize="end" />

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="@dimen/dimens_20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back" />

    <Button
        android:id="@+id/buttonEnd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:minWidth="@dimen/dimens_0dp"
        android:minHeight="@dimen/dimens_0dp"
        android:padding="@dimen/dimens_20dp"
        app:backgroundTint="@null" />
</RelativeLayout>
